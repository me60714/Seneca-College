<!-- content section-->
    <section class="content2">
        <div class="header">Pick a package, choose your meals, achieve your goal. - it's that easy!</div>
        <div class="box">
            <div class="block">
                <div class="block-img">
                    <img src="/005.png">
                </div>
                <div class="block-content">
                    <p class="--header"><a href="/mealdesc1">Weight Loss</a></p>
                    <p class="--content">High protein, low-calorie meals with a nutrient profile tuned for weight loss</p>
                    <P class="price">from $8/meal</P>
                </div>
            </div>
            <div class="block">
                <div class="block-img">
                    <img src="/006.png">
                </div>
                <div class="block-content">
                    <p class="--header"><a href="/mealdesc2">Muscle</a></p>
                    <p class="--content">Higher protein and calorie portions to support your muscle gain momentum</p>
                    <P class="price">from $8/meal</P>
                </div>
            </div>
            <div class="block">
                <div class="block-img">
                    <img src="/007.png">
                </div>
                <div class="block-content">
                    <p class="--header"><a href="/mealdesc3">Keto</a></p>
                    <p class="--content">High fat, low carb meals with moderate protein to achieve and sustain ketosis</p>
                    <P class="price">from $8/meal</P>
                </div>
            </div>
            <div class="block">
                <div class="block-img">
                    <img src="/008.png">
                </div>
                <div class="block-content">
                    <p class="--header"><a href="/mealdesc4">Fat Burner</a></p>
                    <p class="--content">Low carb, nutrient-rich meals with fat-burning profiles to support fat loss</p>
                    <P class="price">from $8/meal</P>
                </div>
            </div>
        </div>
    </section>

    <section>
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Category</th>
                <th>Number</th>
                
            </tr>
            
            <tr>
                <form method="post" action="updateMeal" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="{{id}}" />
                    <td><input type="text" name="name" value="{{name}}" /></td>
                    <td><input type="text" name="price" value="{{price}}" /></td>
                    <td><input type="text" name="description" value="{{description}}" /></td>
                    <td><input type="text" name="category" value="{{category}}" /></td>
                    <td><input type="text" name="number" value="{{number}}" /></td>
                    <td><img src="./photos/{{photo}}" style="width:50%;" /></td>
                    <td><input type="submit" value="Update" /></td>
                </form>

                <form method="POST" action="deleteMeal" enctype="multipart/form-data">
                    <td><input type="hidden" name="id" value="{{id}}" /></td>
                    <td><input type="submit" value="Delete" /></td>
                </form>
            </tr>
            
            <tr>
                <td>No Data Available</td>
            </tr>
            
        </table>
        
        
        <p class="add-meal-text">Add a new meal:</p>
        <div>
            
            <form class="add-meal-form" action="/addMeal" method="POST" enctype="multipart/form-data">
                <label for="name">Name</label>
                <input id="name" type="text" name="name" /><br />
                <label for="price">Price</label>
                <input id="price" type="text" name="price" /><br />
                <label for="description">Description</label>
                <input id="description" type="text" name="description" /><br />
                <label for="category">Category</label>
                <input id="category" type="text" name="category" /><br />
                <label for="number">Number</label>
                <input id="number" type="text" name="number" /><br />
                <label for="photo">Photo ID</label>
                <input id="photo" type="file" name="photo" /><br />
                <input type="submit" value="Submit File" />
            </form>
        </div>
    </section>
    

